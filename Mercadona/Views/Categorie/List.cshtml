@model List<Mercadona_V1.Models.Domain.Categorie>

@{
    ViewData["Title"] = "Liste des catégories";
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1> Liste des catégories </h1>
    </div>
</div>

<div class="container py-3">
    @if(Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Libelle</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var categorie in Model)
                {
                    <tr>
                        <td><strong> @categorie.libelle </strong></td>
                        <td>
                            <a class="btn btn-primary" asp-area="" asp-controller="Categorie" 
                                asp-action="Edit" asp-route-id="@categorie.categorieID"> Modifier </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> Aucune catégorie n'a été ajoutée</p>
    }
</div>