@model Mercadona_V1.Models.ViewModels.Promotion.EditPromotionRequest

@{
    ViewData["Title"] = "Modification de la promotion";
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1> Modification de la promotion </h1>
    </div>
</div>

<div class="container py-5">

    <form method="post">

        <div class="mb-3" style="display:none">
            <input readonly type="text" class="form-control" id="promotionID" asp-for="promotionID" />
        </div>

        <div class="mb-3">
            <label class="form-label"> Date de début </label>
            <input type="date" id="dateDebut" class="form-control" asp-for="dateDebut" />
        </div>

        <div class="mb-3">
            <label class="form-label"> Date de fin </label>
            <input type="date" id="dateFin" class="form-control" asp-for="dateFin" />
        </div>

        <div class="mb-3">
            <label class="form-label"> Pourcentage de remise </label>
            <input type="number" id="remise" class="form-control" asp-for="remise" />
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-dark"> Modifier </button>
            <button type="submit" class="btn btn-danger ms-2" asp-area="" asp-controller="Promotion" asp-action="Delete"> Supprimer </button>
        </div>

    </form>

    <a asp-area="" asp-controller="Promotion" asp-action="List">
        Retour à la liste
    </a>

</div>