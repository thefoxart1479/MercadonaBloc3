@model List<Mercadona_V1.Models.Domain.Promotion>

@{
    ViewData["Title"] = "Liste des promotions";
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1> Liste des promotions </h1>
    </div>
</div>

<div class="container py-3">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>

                <tr>

                    <th> Date de début </th>
                    <th> Date de fin </th>
                    <th> Remise </th>
                    <th></th>
                    <th></th>

                </tr>

            </thead>

            <tbody>

                @foreach (var promotion in Model)
                {
                    <tr>

                        <td> @promotion.dateDebut </td>
                        <td> @promotion.dateFin </td>
                        <td> @promotion.remise % </td>
                        <td>
                            <a class="btn btn-primary" asp-area="" asp-controller="Promotion" 
                                asp-action="Edit" asp-route-id="@promotion.promotionID"> Modifier </a>
                        </td>

                    </tr>
                }
            
            </tbody>

        </table>
    }
    else
    {
        <p> Aucune promotion n'a été ajoutée</p>
    }
</div>