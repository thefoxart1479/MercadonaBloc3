@model Mercadona_V1.Models.ViewModels.Promotion.AddPromotionRequest

@{
    ViewData["Title"] = "Ajout d'une promotion";
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1> Ajouter une promotion </h1>
    </div>
</div>

<div class="container py-5">

    <form method="post">

        <div class="mb-3">
            <label class="form-label"> Date de début </label>
            <input type="date" class="form-control" id="dateDebut" asp-for="dateDebut" />
        </div>

        <div class="mb-3">
            <label class="form-label"> Date de fin </label>
            <input type="date" class="form-control" id="dateFin" asp-for="dateFin" />
        </div>

        <div class="mb-3">
            <label class="form-label"> Pourcentage de remise </label>
            <input type="number" class="form-control" id="remise" asp-for="remise" />
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-dark"> Créer </button>
        </div>

    </form>

</div>